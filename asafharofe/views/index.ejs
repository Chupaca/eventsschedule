<% layout('layout') -%>
<div class="uk-vertical-align uk-text-center uk-height-1-1">
            <div class="uk-vertical-align-middle" style="width: 250px;">
			    <form id='form' class="uk-panel uk-panel-box uk-form" method='post' action="/user/login">
                    <div class="uk-form-row">
                        <input name="username" class="uk-width-1-1 uk-form-large" type="text" placeholder="שם משתמש">
                    </div>
                    <div class="uk-form-row">
                        <input name="password" class="uk-width-1-1 uk-form-large" type="password" placeholder="ססמא">
                    </div>
                    <div class="uk-form-row">
                        <a class="uk-width-1-1 uk-button uk-button-primary uk-button-large" id="submitBtn" onclick='$("#form").submit();'>התחבר</a>
                    </div>
                </form>

            </div>
        </div>
        <script>
                document.addEventListener('keydown', function (e) {
                    var key = event.which || event.keyCode;
                    if (key === 13) {
                        var submitBtn = document.getElementById("submitBtn")
                        submitBtn.click();
                    }
                });
               
        </script>